<div class="container">
  <div class="row">
    <%= form_for(@message) do |f| %>
    <div class="form-group col-xs-offset-1 col-xs-2">
      <%= f.text_field :nick, class: "form-control", placeholder: "Type your name" %>
      </div>
      <div class="form-group col-xs-8">
      <%= f.text_field :note, class: "form-control", placeholder: "Type a message" %>
      </div>
      <%= f.submit "Create", class: "hidden" %>
    <% end %>
</div>

<div class="view">
<%= render @messages %>
</div>
</div>