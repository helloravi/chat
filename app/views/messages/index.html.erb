<div class="container">
  <div class="row">

    <%= form_for(@message, remote: :true) do |f| %>
    <div class="form-group col-xs-offset-1 col-xs-2">
      <%= f.text_field :nick, class: "form-control", placeholder: "Type your name" %>
      </div>
      <div class="form-group col-xs-9">
      <%= f.text_field :note, class: "form-control", placeholder: "Type a message" %>
      </div>
      <%= f.submit "Create", class: "hidden" %>
    <% end %>
    <%= link_to "Refresh", refresh_messages_path(latest_id: @messages.first.id), remote: :true, id: "refresh" %>

    <div id="view">
      <%= render @messages %>
    </div>
</div>




</div>